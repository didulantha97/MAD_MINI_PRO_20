<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_man_cost">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="82dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/elephas_icon"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="110dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/textTitile001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/driver_guide_costs"
                android:textColor="@color/colorBackground"
                android:background="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="@string/drivers_bata_lkr" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/gross"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="@string/drivers_bata_lkr"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="@string/guide_fee_lkr" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/extraMileage"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="@string/guide_fee_lkr"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="@string/total_in_lkr" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/totalMileage"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="@string/total_mileage"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:text="@string/total_in_usd" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/chargePerKm"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="@string/total_in_usd"/>

                </LinearLayout>

                <Button
                    android:id="@+id/t_save"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="@string/txtSave"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>